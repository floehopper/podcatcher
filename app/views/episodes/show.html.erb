<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @episode.podcast.title %> - <%= @episode.title %></h1>

      <% if @episode.audio.attached? %>
        <audio controls>
          <source src="<%= rails_blob_path(@episode.audio) %>" type="<%= @episode.audio.content_type %>">
          Your browser does not support the audio element.
        </audio>
      <% end %>
    </div>
  </div>
</div>
