<header class="bg-light border-bottom mb-4">
  <nav class="navbar navbar-expand-lg container">
    <%= link_to root_path, class: "navbar-brand ms-3 d-flex align-items-center" do %>
      <%= image_tag "icon.svg", alt: "Podcatcher", width: 24 %>
      <span class="ms-2">Podcatcher</span>
    <% end %>
    <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Podcasts", podcasts_path, class: "nav-link" %>
        </li>
        <% if authenticated? && Current.user.subscriptions.any? %>
          <li class="nav-item">
            <%= link_to "Subscriptions", subscriptions_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ms-auto">
        <% if authenticated? %>
          <li class="nav-item">
            <%= button_to "Logout", session_path, method: :delete, class: "nav-link me-3" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_session_path, class: "nav-link me-3" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
