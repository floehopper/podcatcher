<li class="list-group-item d-flex justify-content-between">
  <div>
    <%= link_to podcast.title, podcast_path(podcast) %>
    <small class="text-muted">(published <%= podcast.published_at && time_ago_in_words(podcast.published_at) %> ago)</small>
  </div>
  <% if authenticated? %>
    <% if Current.user.subscribed_to?(podcast) %>
      <%= button_to subscription_path(Current.user.subscription_for(podcast)), method: :delete, class: 'btn btn-danger' do %>
        <i class="bi bi-dash-circle"></i> <span class="d-none d-md-inline">Unsubscribe</span>
      <% end %>
    <% else %>
      <%= button_to podcast_subscriptions_path(podcast), class: 'btn btn-primary' do %>
        <i class="bi bi-plus-circle"></i> <span class="d-none d-md-inline">Subscribe</span>
      <% end %>
    <% end %>
  <% end %>
</li>
