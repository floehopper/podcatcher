<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @podcast.title %></h1>

      <ul class="list-group">
        <% @podcast.episodes.each do |episode| %>
          <li class="list-group-item d-flex justify-content-between">
            <div>
              <%= episode.title %>
              <small class="text-muted">(published <%= time_ago_in_words(episode.published_at) %> ago)</small>
            </div>

            <% if episode.audio.attached? %>
              <audio controls>
                <source src="<%= rails_blob_path(episode.audio) %>" type="<%= episode.audio.content_type %>">
                Your browser does not support the audio element.
              </audio>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
